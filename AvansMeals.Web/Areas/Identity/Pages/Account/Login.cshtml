@page
@model LoginModel

@{
    ViewData["Title"] = "Inloggen";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Welkom terug</h1>
            <p class="auth-subtitle text-muted">
                Log in om pakketten te reserveren of te beheren.
            </p>
        </div>

        <form id="account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="current-password"
                       placeholder="Wachtwoord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                <a asp-page="./ForgotPassword" class="auth-link">
                    Wachtwoord vergeten?
                </a>
            </div>

            <button id="login-submit"
                    type="submit"
                    class="btn btn-primary btn-lg w-100">
                Inloggen
            </button>
        </form>

        <div class="auth-divider">
            <span>of</span>
        </div>

        <div class="auth-footer">
            <p class="mb-1">
                Nog geen account?
                <a asp-page="./Register"
                   asp-route-returnUrl="@Model.ReturnUrl"
                   class="auth-link fw-semibold">
                    Registreren
                </a>
            </p>

            <a asp-page="./ResendEmailConfirmation" class="auth-link small">
                Bevestigingsmail opnieuw sturen
            </a>
        </div>

        @* External login (optioneel, subtiel) *@
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr class="my-3" />
            <form asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                  class="d-grid gap-2">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit"
                            class="btn btn-outline-secondary"
                            name="provider"
                            value="@provider.Name">
                        Log in met @provider.DisplayName
                    </button>
                }
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
