@page
@model RegisterModel

@{
    ViewData["Title"] = "Registreren";
}

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Account aanmaken</h1>
            <p class="auth-subtitle text-muted">
                Maak een account aan om pakketten te reserveren. Je geboortedatum wordt gebruikt voor 18+ pakketten.
            </p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <input asp-for="Input.DateOfBirth"
                       class="form-control"
                       type="date" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>

                <div class="text-muted small mt-1">
                    Dit helpt bij automatische controle voor 18+ pakketten.
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="Wachtwoord" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword"
                       class="form-control"
                       autocomplete="new-password"
                       placeholder="Herhaal wachtwoord" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg w-100">
                Registreren
            </button>
        </form>

        <div class="auth-divider">
            <span>of</span>
        </div>

        <div class="auth-footer">
            <p class="mb-1">
                Heb je al een account?
                <a asp-page="./Login"
                   asp-route-returnUrl="@Model.ReturnUrl"
                   class="auth-link fw-semibold">
                    Inloggen
                </a>
            </p>
        </div>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr class="my-3" />
            <form asp-page="./ExternalLogin"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                  class="d-grid gap-2">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit"
                            class="btn btn-outline-secondary"
                            name="provider"
                            value="@provider.Name">
                        Registreren met @provider.DisplayName
                    </button>
                }
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
