@model AvansMeals.Domain.Entities.Package

@{
    ViewData["Title"] = "Package verwijderen";
}

<div class="d-flex align-items-end justify-content-between gap-3 mb-3">
    <div>
        <a class="app-back" asp-action="Packages">← Terug naar beheer</a>
        <h1 class="mb-1 text-danger">Package verwijderen</h1>
        <div class="text-muted">
            Deze actie kan niet ongedaan worden gemaakt.
        </div>
    </div>
</div>

<div class="row g-3">
    <!-- CONFIRM -->
    <div class="col-lg-7">
        <div class="card p-3 h-100 border-danger">
            <div class="app-delete-warning mb-3">
                <div class="fw-bold">Weet je zeker dat je dit package wilt verwijderen?</div>
                <div class="text-muted small">
                    Alle gekoppelde informatie wordt definitief verwijderd.
                </div>
            </div>

            <h2 class="h6 fw-bold mb-2">Package details</h2>

            <div class="app-details-grid">
                <div class="app-details-item">
                    <div class="text-muted small">Naam</div>
                    <div class="fw-bold">@Model.Name</div>
                </div>

                <div class="app-details-item">
                    <div class="text-muted small">Stad</div>
                    <div class="fw-bold">@Model.City</div>
                </div>

                <div class="app-details-item">
                    <div class="text-muted small">Type</div>
                    <div class="fw-bold">@Model.MealType</div>
                </div>

                <div class="app-details-item">
                    <div class="text-muted small">Prijs</div>
                    <div class="fw-bold">€ @Model.Price.ToString("0.00")</div>
                </div>

                <div class="app-details-item">
                    <div class="text-muted small">Ophalen van</div>
                    <div class="fw-bold">@Model.PickupFrom.ToString("dd-MM-yyyy HH:mm")</div>
                </div>

                <div class="app-details-item">
                    <div class="text-muted small">Ophalen tot</div>
                    <div class="fw-bold">@Model.PickupUntil.ToString("dd-MM-yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTIES -->
    <div class="col-lg-5">
        <div class="card p-3 h-100">
            <h2 class="h6 fw-bold mb-2">Bevestig verwijderen</h2>

            <div class="text-muted mb-3">
                Alleen verwijderen als je zeker weet dat dit package niet meer nodig is.
            </div>

            <form asp-action="DeleteConfirmed" method="post" class="d-grid gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <button type="submit" class="btn btn-danger btn-lg">
                    Ja, definitief verwijderen
                </button>

                <a asp-action="Packages" class="btn btn-outline-secondary btn-lg">
                    Annuleren
                </a>
            </form>
        </div>
    </div>
</div>
