@model IEnumerable<AvansMeals.Domain.Entities.Package>

@{
    ViewData["Title"] = "Beheer packages";
}

<div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-3">
    <div>
        <h1 class="mb-1">Beheer packages</h1>
        <div class="text-muted">Maak, wijzig en beheer producten in pakketten.</div>
    </div>

    <a asp-action="Create" class="btn btn-primary">
        + Nieuw package
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card p-4">
        <h2 class="h5 fw-bold mb-1">Geen packages</h2>
        <div class="text-muted">Maak je eerste package aan om het aanbod te vullen.</div>
        <div class="mt-3">
            <a asp-action="Create" class="btn btn-primary">+ Nieuw package</a>
        </div>
    </div>
}
else
{
    <div class="app-grid">
        @foreach (var p in Model)
        {
            <div class="app-package card p-3">
                <div class="d-flex align-items-start justify-content-between gap-2">
                    <div>
                        <div class="app-package-title">@p.Name</div>
                        <div class="text-muted small">
                            @p.MealType • € @p.Price.ToString("0.00")
                        </div>
                    </div>

                    <div class="d-flex flex-column align-items-end gap-1">
                        @if (p.Is18Plus)
                        {
                            <span class="badge bg-danger">18+</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">All ages</span>
                        }

                        @if (p.ReservedByStudentId == null)
                        {
                            <span class="badge bg-success">Vrij</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Gereserveerd</span>
                        }
                    </div>
                </div>

                <div class="app-package-meta mt-3">
                    <div class="app-meta-row">
                        <span class="text-muted">Ophalen van</span>
                        <strong>@p.PickupFrom.ToString("dd-MM HH:mm")</strong>
                    </div>
                    <div class="app-meta-row">
                        <span class="text-muted">Ophalen tot</span>
                        <strong>@p.PickupUntil.ToString("dd-MM HH:mm")</strong>
                    </div>
                </div>

                @if (p.ReservedByStudentId != null)
                {
                    <div class="app-admin-note mt-3">
                        <div class="fw-semibold">Gereseveerd door</div>
                        <div class="text-muted small">@p.ReservedByStudentId</div>
                    </div>
                }

                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-outline-primary w-100"
                       asp-action="Edit"
                       asp-route-id="@p.Id">
                        Bewerk
                    </a>

                    <a class="btn btn-outline-secondary w-100"
                       asp-action="ManageProducts"
                       asp-route-packageId="@p.Id">
                        Producten
                    </a>
                </div>

                <div class="mt-2">
                    @if (p.ReservedByStudentId == null)
                    {
                        <a class="btn btn-outline-danger w-100"
                           asp-action="Delete"
                           asp-route-id="@p.Id"
                           onclick="return confirm('Weet je zeker dat je dit package wilt verwijderen?');">
                            Verwijder
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100" disabled>
                            Verwijderen niet mogelijk
                        </button>
                    }
                </div>
            </div>
        }
    </div>
}
