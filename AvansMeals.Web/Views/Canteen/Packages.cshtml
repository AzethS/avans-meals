@model IEnumerable<AvansMeals.Domain.Entities.Package>

@{
    ViewData["Title"] = "Beheer packages";
}

<h1 class="mb-4">Beheer packages</h1>
<a asp-action="Create" class="btn btn-primary mb-3">+ Nieuw package</a>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Type</th>
            <th>Prijs</th>
            <th>18+</th>
            <th>Van</th>
            <th>Tot</th>
            <th>Status</th>
            <th>Actie</th>
            <th>Verwijderen</th>
            <th>Producten</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.MealType</td>
                <td>€ @p.Price.ToString("0.00")</td>
                <td>@(p.Is18Plus ? "Ja" : "Nee")</td>
                <td>@p.PickupFrom.ToString("dd-MM HH:mm")</td>
                <td>@p.PickupUntil.ToString("dd-MM HH:mm")</td>
                <td>
                    @if (p.ReservedByStudentId == null)
                    {
                        <span class="badge bg-success">Vrij</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Gereserveerd</span>
                        <small class="text-muted d-block">@p.ReservedByStudentId</small>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary"
                       asp-action="Edit"
                       asp-route-id="@p.Id">Bewerk</a>
                </td>
                <td>
                @if (p.ReservedByStudentId == null)
                {
                    <a class="btn btn-sm btn-outline-danger"
                       asp-action="Delete"
                       asp-route-id="@p.Id">Verwijder</a>
                }
                else
                {
                    <button class="btn btn-sm btn-outline-secondary" disabled>Verwijder</button>
                }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-action="ManageProducts"
                       asp-route-packageId="@p.Id">Producten</a>
                </td>
            </tr>
        }
    </tbody>
</table>
