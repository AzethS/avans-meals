@model AvansMeals.Web.ViewModels.PackageCreateViewModel
@using AvansMeals.Domain.Enums

@{
    ViewData["Title"] = "Nieuw package";
}

<h1 class="mb-4">Nieuw package</h1>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="col-md-3">
        <label asp-for="MealType" class="form-label"></label>
        <select asp-for="MealType" class="form-select" asp-items="Html.GetEnumSelectList<MealType>()"></select>
        <span asp-validation-for="MealType" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="PickupFrom" class="form-label"></label>
        <input asp-for="PickupFrom" class="form-control" type="datetime-local"
               value="@Model.PickupFrom.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="PickupFrom" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="PickupUntil" class="form-label"></label>
        <input asp-for="PickupUntil" class="form-control" type="datetime-local"
               value="@Model.PickupUntil.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="PickupUntil" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success">Opslaan</button>
        <a asp-action="Packages" class="btn btn-secondary">Annuleren</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
