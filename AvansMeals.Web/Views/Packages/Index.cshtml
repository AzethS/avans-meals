@model IEnumerable<AvansMeals.Web.ViewModels.PackageViewModel>
@using AvansMeals.Domain.Enums

@{
    ViewData["Title"] = "Aanbod";
}

<div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-3">
    <div>
        <h1 class="mb-1">Beschikbaar aanbod</h1>
        <div class="text-muted">Filter op stad en maaltijdtype en reserveer een pakket.</div>
    </div>

    <form method="get" class="app-filter">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-5">
                <label class="form-label mb-1">Stad</label>
                <select class="form-select" name="city">
                    <option value="">Alle</option>
                    @foreach (var c in Enum.GetNames(typeof(City)))
                    {
                        <option value="@c" selected="@(ViewBag.SelectedCity == c)">@c</option>
                    }
                </select>
            </div>

            <div class="col-12 col-md-5">
                <label class="form-label mb-1">Maaltijdtype</label>
                <select class="form-select" name="mealType">
                    <option value="">Alle</option>
                    @foreach (var m in Enum.GetNames(typeof(MealType)))
                    {
                        <option value="@m" selected="@(ViewBag.SelectedMealType == m)">@m</option>
                    }
                </select>
            </div>

            <div class="col-12 col-md-2 d-grid">
                <button class="btn btn-primary" type="submit">Filter</button>
            </div>

            <div class="col-12 d-flex justify-content-end">
                <a class="btn btn-link app-filter-reset" asp-action="Index">Reset</a>
            </div>
        </div>
    </form>
</div>

@if (Model == null || !Model.Any())
{
    <div class="app-empty card p-4">
        <h2 class="h5 fw-bold mb-1">Geen pakketten gevonden</h2>
        <div class="text-muted">
            Er zijn nu geen pakketten beschikbaar voor deze filters. Probeer andere filters of kijk later opnieuw.
        </div>
        <div class="mt-3">
            <a class="btn btn-primary" asp-action="Index">Bekijk alles</a>
        </div>
    </div>
}
else
{
    <div class="app-grid">
        @foreach (var p in Model)
        {
            <div class="app-package card p-3">
                <div class="d-flex align-items-start justify-content-between gap-2">
                    <div>
                        <div class="app-package-title">@p.Name</div>
                        <div class="text-muted small">
                            @p.City • @p.MealType
                        </div>
                    </div>

                    @if (p.Is18Plus)
                    {
                        <span class="badge bg-danger">18+</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">All ages</span>
                    }
                </div>

                <div class="app-package-meta mt-3">
                    <div class="app-meta-row">
                        <span class="text-muted">Prijs</span>
                        <strong>€ @p.Price.ToString("0.00")</strong>
                    </div>
                    <div class="app-meta-row">
                        <span class="text-muted">Ophalen</span>
                        <strong>@p.PickupFrom.ToString("dd-MM HH:mm")</strong>
                    </div>
                    <div class="app-meta-row">
                        <span class="text-muted">Tot</span>
                        <strong>@p.PickupUntil.ToString("dd-MM HH:mm")</strong>
                    </div>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-outline-primary w-100"
                       asp-action="Details"
                       asp-route-id="@p.Id">
                        Details
                    </a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        if (p.CanReserve)
                        {
                            <form asp-action="Reserve" method="post" class="w-100">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-primary w-100">
                                    Reserveer
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary w-100" type="button" disabled>
                                Niet reserveerbaar
                            </button>
                        }
                    }
                    else
                    {
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           asp-route-returnUrl="@Context.Request.Path"
                           class="btn btn-primary w-100">
                            Login om te reserveren
                        </a>
                    }
                </div>
            </div>
        }
    </div>
}
