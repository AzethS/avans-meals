@model IEnumerable<AvansMeals.Web.ViewModels.PackageViewModel>

@{
    ViewData["Title"] = "Aanbod";
}

<h1 class="mb-4">Beschikbaar aanbod</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@using AvansMeals.Domain.Enums

<form method="get" class="mb-3">
    <label>Stad:</label>
    <select name="city">
        <option value="">Alle</option>
        @foreach (var c in Enum.GetNames(typeof(City)))
        {
            <option value="@c" selected="@(ViewBag.SelectedCity == c)">
                @c
            </option>
        }
    </select>

    <label>Maaltijdtype:</label>
    <select name="mealType">
        <option value="">Alle</option>
        @foreach (var m in Enum.GetNames(typeof(MealType)))
        {
            <option value="@m" selected="@(ViewBag.SelectedMealType == m)">
                @m
            </option>
        }
    </select>

    <button type="submit">Filter</button>
    <a asp-action="Index">Reset</a>
</form>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Stad</th>
            <th>Type</th>
            <th>Prijs</th>
            <th>18+</th>
            <th>Details</th>
            <th>Actie</th>
            <th>Ophalen van</th>
            <th>Ophalen tot</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.City</td>
                <td>@p.MealType</td>
                <td>€ @p.Price.ToString("0.00")</td>
                <td>@(p.Is18Plus ? "Ja" : "Nee")</td>

                <!-- Actie kolom -->
                <td>
                    <a class="btn btn-outline-secondary btn-sm me-2"
                       asp-action="Details"
                       asp-route-id="@p.Id">
                        Bekijk
                    </a>
                </td>
                <td>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        if (p.CanReserve)
                        {

                            <form asp-action="Reserve" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Reserveer</button>
                            </form>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Niet reserveerbaar</span>
                        }
                    }
                    else
                    {
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           asp-route-returnUrl="@Context.Request.Path"
                           class="btn btn-outline-primary btn-sm">
                            Login om te reserveren
                        </a>
                    }
                </td>

                <!-- Pickup tijden -->
                <td>@p.PickupFrom.ToString("dd-MM HH:mm")</td>
                <td>@p.PickupUntil.ToString("dd-MM HH:mm")</td>
            </tr>

        }
    </tbody>
</table>
