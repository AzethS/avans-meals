@model IEnumerable<AvansMeals.Web.ViewModels.PackageViewModel>

@{
    ViewData["Title"] = "Mijn reserveringen";
}

<div class="d-flex align-items-end justify-content-between gap-3 mb-3">
    <div>
        <h1 class="mb-1">Mijn reserveringen</h1>
        <div class="text-muted">Overzicht van jouw gereserveerde pakketten.</div>
    </div>

    <a class="btn btn-outline-primary" asp-controller="Packages" asp-action="Index">
        Naar aanbod
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="app-empty card p-4">
        <h2 class="h5 fw-bold mb-1">Nog geen reserveringen</h2>
        <div class="text-muted">
            Je hebt nog geen pakket gereserveerd. Ga naar het aanbod om een pakket te reserveren.
        </div>
        <div class="mt-3">
            <a class="btn btn-primary" asp-controller="Packages" asp-action="Index">Bekijk aanbod</a>
        </div>
    </div>
}
else
{
    <div class="app-grid app-grid-2">
        @foreach (var r in Model)
        {
            <div class="app-res card p-3">
                <div class="d-flex align-items-start justify-content-between gap-2">
                    <div>
                        <div class="app-package-title">@r.Name</div>
                        <div class="text-muted small">@r.City • @r.MealType</div>
                    </div>

                    @if (r.Is18Plus)
                    {
                        <span class="badge bg-danger">18+</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">All ages</span>
                    }
                </div>

                <div class="app-package-meta mt-3">
                    <div class="app-meta-row">
                        <span class="text-muted">Prijs</span>
                        <strong>€ @r.Price.ToString("0.00")</strong>
                    </div>
                    <div class="app-meta-row">
                        <span class="text-muted">Ophalen</span>
                        <strong>@r.PickupFrom.ToString("dd-MM HH:mm")</strong>
                    </div>
                    <div class="app-meta-row">
                        <span class="text-muted">Tot</span>
                        <strong>@r.PickupUntil.ToString("dd-MM HH:mm")</strong>
                    </div>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a class="btn btn-outline-primary w-100"
                       asp-action="Details"
                       asp-route-id="@r.Id">
                        Details
                    </a>

                    <form class="w-100"
                          asp-action="Cancel"
                          method="post"
                          onsubmit="return confirm('Weet je zeker dat je deze reservering wilt annuleren?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <button type="submit" class="btn btn-outline-danger w-100">
                            Annuleren
                        </button>
                    </form>
                </div>

                <div class="app-res-hint mt-3 small text-muted">
                    Annuleren kan tot het ophaalmoment begint.
                </div>
            </div>
        }
    </div>
}
