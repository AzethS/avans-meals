@model AvansMeals.Domain.Entities.Package

@{
    ViewData["Title"] = "Package details";
}

<h1 class="mb-3">@Model.Name</h1>

<div class="mb-3">
    @if (Model.Is18Plus)
    {
        <span class="badge bg-danger">18+</span>
    }
    else
    {
        <span class="badge bg-success">Geschikt voor iedereen</span>
    }
</div>

<div class="card mb-4">
    <div class="card-body">
        <p class="mb-1"><strong>Stad:</strong> @Model.City</p>
        <p class="mb-1"><strong>Type:</strong> @Model.MealType</p>
        <p class="mb-1"><strong>Prijs:</strong> € @Model.Price.ToString("0.00")</p>
        <p class="mb-1"><strong>Ophalen van:</strong> @Model.PickupFrom.ToString("dd-MM-yyyy HH:mm")</p>
        <p class="mb-0"><strong>Ophalen tot:</strong> @Model.PickupUntil.ToString("dd-MM-yyyy HH:mm")</p>
    </div>
</div>

<h4>Inhoud</h4>

@if (Model.PackageProducts == null || !Model.PackageProducts.Any())
{
    <p class="text-muted">Er zijn nog geen producten gekoppeld aan dit package.</p>
}
else
{
    <ul class="list-group mb-4">
        @foreach (var pp in Model.PackageProducts)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>@pp.Product.Name</span>

                @if (pp.Product.ContainsAlcohol)
                {
                    <span class="badge bg-warning text-dark">Alcohol</span>
                }
            </li>
        }
    </ul>
}

<a asp-action="Index" class="btn btn-secondary">Terug naar aanbod</a>
